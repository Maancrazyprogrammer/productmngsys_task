<!-- app/views/carts/show.html.erb -->
<h1>Your Cart</h1>

<% @cart.each do |cart_item| %>
  <p><%= cart_item.product.p_Name %> - Quantity: <%= cart_item.quantities %> - Subtotal: <%= number_to_currency(cart_item.quantities * cart_item.product.p_price.to_i) %></p>
<% end %>

<p><strong>Total Bill: <%= number_to_currency(@total_bill) %></strong></p>

<%= button_to "Buy Product", confirm_order_cart_path, method: :post, class: "btn btn-primary" %>
<%= link_to 'back', products_path %>